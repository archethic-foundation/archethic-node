{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "aewebVersion": {
      "type": "number",
      "exclusiveMinimum": 0,
      "description": "AEWeb's version"
    },
    "sslCertificate": {
      "type": "string",
      "description": "SSL certificate of the website"
    },
    "metadata": {
      "description": "List of files",
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "properties": {
          "encoding": {
            "description": "The encoding of the file",
            "type": "string",
            "enum": ["gzip"]
          },
          "addresses": {
            "description": "List of addresses to storage the file",
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "pattern": "^([0-9A-Fa-f])*$",
              "minLength": 64,
              "maxLength": 68
            }
          }
        },
        "required": ["addresses"]
      }
    }
  },
  "required": ["aewebVersion", "metadata"]
}
